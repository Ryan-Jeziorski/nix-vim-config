{
  opts = {
    updatetime = 100; #faster completions

    # Relative Numbering
    number = true;
    relativenumber = true;
    splitbelow = true;
    splitright = true;
    scrolloff = 4;

    # Tab and Indent Settings
    autoindent = true;
    expandtab = true;
    shiftwidth = 2;
    smarttab = true;
    smartindent = true;
    tabstop = 8;
    softtabstop =0;

    ignorecase = true;
    incsearch = true;
    smartcase = true;
    wildmode = "list:longest";

    undofile = true; # Build-in persistent undo

  };
}
